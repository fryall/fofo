<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/solution_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/result_tv"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginBottom="-18dp"
        android:textAlignment="textEnd"
        android:text=""

        android:textColor="#5A5A5A"
        android:textSize="@dimen/_32ssp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/result_tv"
        android:text=""
        android:textSize="@dimen/_64ssp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:layout_above="@id/buttons_layout"
        android:layout_margin="@dimen/_16sdp" />



    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_alignParentBottom="true"
    android:background="#F1F1F1"
    android:paddingVertical="@dimen/_6sdp"
    android:id="@+id/buttons_layout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_c"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_55sdp"
                app:cornerRadius="@dimen/_36sdp"
                android:textSize="@dimen/_30ssp"
                android:layout_margin="@dimen/_6sdp"
                android:backgroundTint="#F44336"
                android:text="C"
                android:textColor="@color/white"

                 />
            <com.google.android.material.button.MaterialButton
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_55sdp"
                app:cornerRadius="@dimen/_36sdp"
                android:textSize="@dimen/_30ssp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textColor="@color/white"
                android:layout_margin="@dimen/_6sdp"
                android:id="@+id/button_open_bracket"
                android:backgroundTint="#A1A1A1"
                android:text="(" />
            <com.google.android.material.button.MaterialButton

                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_55sdp"
                app:cornerRadius="@dimen/_36sdp"
                android:textSize="@dimen/_30ssp"
                android:layout_margin="@dimen/_6sdp"
                android:textColor="@color/white"
                android:backgroundTint="#A1A1A1"
                android:id="@+id/button_close_bracket"
                android:text=")" />
            <com.google.android.material.button.MaterialButton

                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_55sdp"
                app:cornerRadius="@dimen/_36sdp"
                android:textSize="@dimen/_30ssp"
                android:layout_margin="@dimen/_6sdp"
                android:textColor="@color/white"
                android:id="@+id/button_divide"
                android:backgroundTint="#FF9800"
                android:text="/" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton

                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textColor="@color/white"
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_55sdp"
                app:cornerRadius="@dimen/_36sdp"
                android:textSize="@dimen/_30ssp"
                android:layout_margin="@dimen/_6sdp"                android:id="@+id/button_7"
                android:text="7" />
            <com.google.android.material.button.MaterialButton

                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textColor="@color/white"
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_55sdp"
                app:cornerRadius="@dimen/_36sdp"
                android:textSize="@dimen/_30ssp"
                android:layout_margin="@dimen/_6sdp"                android:id="@+id/button_8"
                android:text="8" />
            <com.google.android.material.button.MaterialButton

                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textColor="@color/white"
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_55sdp"
                app:cornerRadius="@dimen/_36sdp"
                android:textSize="@dimen/_30ssp"
                android:layout_margin="@dimen/_6sdp"                android:id="@+id/button_9"
                android:text="9" />
            <com.google.android.material.button.MaterialButton

                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textColor="@color/white"
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_55sdp"
                app:cornerRadius="@dimen/_36sdp"
                android:textSize="@dimen/_30ssp"
                android:layout_margin="@dimen/_6sdp"                android:id="@+id/button_multiply"
                android:backgroundTint="#FF9800"
                android:text="*" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton

                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textColor="@color/white"
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_55sdp"
                app:cornerRadius="@dimen/_36sdp"
                android:textSize="@dimen/_30ssp"
                android:layout_margin="@dimen/_6sdp"                android:id="@+id/button_4"
                android:text="4" />
            <com.google.android.material.button.MaterialButton

                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textColor="@color/white"
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_55sdp"
                app:cornerRadius="@dimen/_36sdp"
                android:textSize="@dimen/_30ssp"
                android:layout_margin="@dimen/_6sdp"                android:id="@+id/button_5"
                android:text="5" />
            <com.google.android.material.button.MaterialButton

                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textColor="@color/white"
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_55sdp"
                app:cornerRadius="@dimen/_36sdp"
                android:textSize="@dimen/_30ssp"
                android:layout_margin="@dimen/_6sdp"                android:id="@+id/button_6"
                android:text="6" />
            <com.google.android.material.button.MaterialButton

                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textColor="@color/white"
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_55sdp"
                app:cornerRadius="@dimen/_36sdp"
                android:textSize="@dimen/_30ssp"
                android:layout_margin="@dimen/_6sdp"                android:id="@+id/button_plus"
                android:backgroundTint="#FF9800"
                android:text="+" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton

                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textColor="@color/white"
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_55sdp"
                app:cornerRadius="@dimen/_36sdp"
                android:textSize="@dimen/_30ssp"
                android:layout_margin="@dimen/_6sdp"                android:id="@+id/button_1"
                android:text="1" />
            <com.google.android.material.button.MaterialButton

                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textColor="@color/white"
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_55sdp"
                app:cornerRadius="@dimen/_36sdp"
                android:textSize="@dimen/_30ssp"
                android:layout_margin="@dimen/_6sdp"
                android:id="@+id/button_2"
                android:text="2" />
            <com.google.android.material.button.MaterialButton

                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textColor="@color/white"
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_55sdp"
                app:cornerRadius="@dimen/_36sdp"
                android:textSize="@dimen/_30ssp"
                android:layout_margin="@dimen/_6sdp"                android:id="@+id/button_3"
                android:text="3" />
            <com.google.android.material.button.MaterialButton

                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textColor="@color/white"
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_55sdp"
                app:cornerRadius="@dimen/_36sdp"
                android:textSize="@dimen/_30ssp"
                android:layout_margin="@dimen/_6sdp"                android:id="@+id/button_minus"
                android:backgroundTint="#FF9800"
                android:text="-" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton

                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textColor="@color/white"
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_55sdp"
                app:cornerRadius="@dimen/_36sdp"
                android:textSize="@dimen/_15ssp"
                android:layout_margin="@dimen/_6sdp"                android:id="@+id/button_ac"
                android:backgroundTint="#F44336"
                android:text="AC" />
            <com.google.android.material.button.MaterialButton

                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textColor="@color/white"
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_55sdp"
                app:cornerRadius="@dimen/_36sdp"
                android:textSize="@dimen/_30ssp"
                android:layout_margin="@dimen/_6sdp"                android:id="@+id/button_0"
                android:text="0" />
            <com.google.android.material.button.MaterialButton

                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textColor="@color/white"
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_55sdp"
                app:cornerRadius="@dimen/_36sdp"
                android:textSize="@dimen/_30ssp"
                android:layout_margin="@dimen/_6sdp"                android:id="@+id/button_dot"
                android:text="." />
            <com.google.android.material.button.MaterialButton

                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textColor="@color/white"
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_55sdp"
                app:cornerRadius="@dimen/_36sdp"
                android:textSize="@dimen/_30ssp"
                android:layout_margin="@dimen/_6sdp"                android:id="@+id/button_equals"
                android:backgroundTint="#FF9800"
                android:text="=" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>